<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="62dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <TextView
            android:id="@+id/booru_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BooruName"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/booru_item_host"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="https://example.app" />

        <ImageView
            android:id="@+id/booru_item_drug"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_drag_handle_24"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />


        <ImageView
            android:id="@+id/booru_item_setting"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/booru_item_drug"
            android:src="@drawable/ic_baseline_settings_24" />

        <TextView
            android:id="@+id/booru_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@id/booru_item_setting"
            android:layout_marginEnd="20dp"
            android:text="Moebooru" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
